[run]
source = .
omit =
    */migrations/*
    */tests/*
    */test_*.py
    */__pycache__/*
    */site-packages/*
    .venv/*
    manage.py
    */wsgi.py
    */asgi.py
    conftest.py

[report]
precision = 2
show_missing = True
skip_covered = False

[html]
directory = htmlcov

# Coverage thresholds (70% overall, 90% for critical paths)
fail_under = 70
